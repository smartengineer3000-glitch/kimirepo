{
  "name": "inheritance-calculator-pro",
  "version": "6.0.0",
  "description": "Professional Islamic Inheritance Calculator - Comprehensive Fiqh Engine",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "maestro test .maestro/flows/",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:preview": "eas build --profile preview",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "update": "eas update",
    "doctor": "expo doctor",
    "prebuild": "expo prebuild"
  },
  "dependencies": {
    "expo": "~50.0.0",
    "expo-status-bar": "~1.11.0",
    "expo-splash-screen": "~0.26.0",
    "expo-updates": "~0.24.0",
    "expo-localization": "~14.8.0",
    "expo-sharing": "~11.10.0",
    "expo-file-system": "~16.0.0",
    "expo-print": "~12.8.0",
    "expo-linear-gradient": "~12.7.0",
    "expo-haptics": "~12.8.0",
    "expo-keep-awake": "~12.8.0",
    "expo-secure-store": "~12.8.0",
    "expo-crypto": "~12.8.0",
    "expo-image-manipulator": "~11.8.0",
    "expo-media-library": "~15.9.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-paper": "^5.11.0",
    "react-native-reanimated": "~3.6.0",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "14.1.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "react-native-toast-message": "^2.2.0",
    "react-native-view-shot": "3.8.0",
    "react-native-share": "^10.0.0",
    "i18next": "^23.7.0",
    "react-i18next": "^13.5.0",
    "zustand": "^4.4.7",
    "immer": "^10.0.3",
    "react-native-worklets-core": "^0.3.0",
    "@sentry/react-native": "^5.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "typescript": "^5.3.0",
    "eas-cli": "^7.0.0",
    "@testing-library/react-native": "^12.4.0",
    "@testing-library/jest-native": "^5.4.3",
    "jest": "^29.7.0",
    "jest-expo": "~50.0.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "maestro": "^1.36.0"
  },
  "private": true,
  "keywords": [
    "islamic",
    "inheritance",
    "mirath",
    "mawarith",
    "sharia",
    "fiqh",
    "calculator",
    "islam",
    "sunni",
    "madhab"
  ],
  "author": "Professional Islamic Inheritance System",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  }
}
